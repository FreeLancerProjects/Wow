<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp"
    app:cardCornerRadius="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <FrameLayout
            android:layout_width="105dp"
            android:layout_height="110dp"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"


                />
            <ImageView
                android:id="@+id/image_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/close_red_color"
                android:padding="2dp"
                />
        </FrameLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.15"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:maxLines="2"
                android:layout_marginBottom="30dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                >
                <ImageView
                    android:id="@+id/image_increment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_increment"
                    android:src="@drawable/ic_add"
                    android:padding="10dp"
                    android:layout_alignParentStart="true"
                    tools:ignore="RtlCompat" />
                <TextView
                    android:id="@+id/tv_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/image_increment"
                    android:layout_toStartOf="@+id/image_decrement"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="1"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    tools:ignore="RtlCompat" />
                <ImageView
                    android:id="@+id/image_decrement"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_decrement"
                    android:layout_alignParentEnd="true"
                    tools:ignore="RtlCompat"
                    android:src="@drawable/ic_minus"
                    android:padding="7dp"
                    />
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_weight=".85"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:maxLines="2"
            android:gravity="center"
            android:layout_marginTop="15dp"

            />
    </LinearLayout>

</android.support.v7.widget.CardView>