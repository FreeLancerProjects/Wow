<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sheet_window_bg"
    android:id="@+id/root"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >

        <Button
            android:id="@+id/btn_family_order"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_in_bottom_sheet"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:text="@string/product_families_orders"

            />
        <Button
            android:id="@+id/btn_spare_order"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_in_bottom_sheet"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:text="@string/spare_parts_orders"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/btn_store_order"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_in_bottom_sheet"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:text="@string/stores_orders"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>