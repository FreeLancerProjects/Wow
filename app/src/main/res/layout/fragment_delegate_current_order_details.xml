<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray0"
    android:clickable="true"
    android:focusable="true"

    >
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/fl_update_order_state"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <androidx.appcompat.widget.Toolbar
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            app:contentInsetEnd="0dp"
                            app:contentInsetStart="0dp"
                            app:contentInsetLeft="0dp"
                            app:contentInsetRight="0dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                >
                                <LinearLayout
                                    android:id="@+id/ll_back"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_centerVertical="true"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"

                                    >
                                    <ImageView
                                        android:id="@+id/image_back"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_left_arrow"
                                        android:padding="8dp"
                                        android:clickable="false"
                                        android:longClickable="false"
                                        android:tint="@color/white"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:clickable="false"
                                        android:longClickable="false"
                                        android:text="@string/back"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </RelativeLayout>


                        </androidx.appcompat.widget.Toolbar>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical"

                                >

                                <TextView
                                    android:id="@+id/tv_order_state"
                                    android:layout_width="200dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/tv_state"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:text="state"
                                    android:textAllCaps="false"
                                    android:gravity="center"
                                    />

                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                </com.google.android.material.appbar.AppBarLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:fitsSystemWindows="true"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    android:scrollbars="none"


                    >

                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_alignParentTop="true"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_marginTop="30dp"
                                >
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.2"
                                    >
                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/user"
                                        android:padding="8dp"
                                        android:tint="@color/black"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="@string/client_name"
                                        android:textColor="@color/black"
                                        android:textSize="13sp"
                                        android:textStyle="bold"

                                        />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_client_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.8"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_marginTop="5dp"
                                >
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.2"
                                    >
                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_restaurant"
                                        android:padding="8dp"
                                        android:tint="@color/black"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="@string/place_name"
                                        android:textColor="@color/black"
                                        android:textSize="13sp"
                                        android:textStyle="bold"

                                        />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_rest_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.8"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"

                                >
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.2"
                                    >
                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_map"
                                        android:padding="8dp"
                                        android:tint="@color/black"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="13sp"
                                        android:text="@string/address"
                                        android:layout_gravity="center_vertical"

                                        />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.8"
                                    android:textColor="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_shipment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="vertical"
                                android:visibility="gone"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3"

                                    >
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.2"
                                        >
                                        <ImageView
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:src="@drawable/ic_map"
                                            android:padding="8dp"
                                            android:tint="@color/colorPrimary"
                                            />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorPrimary"
                                            android:textStyle="bold"
                                            android:textSize="13sp"
                                            android:text="@string/receiving_location"
                                            android:layout_gravity="center_vertical"

                                            />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_location_pickup"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.8"
                                        android:textColor="@color/gray4"
                                        android:textStyle="bold"
                                        android:textSize="13sp"
                                        android:layout_gravity="center_vertical"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="3"

                                    >
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.2"
                                        >
                                        <ImageView
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:src="@drawable/ic_map"
                                            android:padding="8dp"
                                            android:tint="@color/colorPrimary"
                                            />
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorPrimary"
                                            android:textStyle="bold"
                                            android:textSize="13sp"
                                            android:text="@string/dropoff_location"
                                            android:layout_gravity="center_vertical"

                                            />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_location_dropoff"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.8"
                                        android:textColor="@color/gray4"
                                        android:textStyle="bold"
                                        android:textSize="13sp"
                                        android:layout_gravity="center_vertical"
                                        />
                                </LinearLayout>


                            </LinearLayout>

                            <ImageView
                                android:id="@+id/order_image"
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:visibility="gone"
                                />
                            <FrameLayout
                                android:id="@+id/fl_map"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/btn_show_map"
                                android:layout_marginBottom="15dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"

                                >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal"
                                    android:clickable="false"
                                    android:longClickable="false"

                                    >
                                    <ImageView
                                        android:id="@+id/image_arrow"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/ic_left_arrow"
                                        android:padding="7dp"
                                        android:clickable="false"
                                        android:longClickable="false"
                                        android:tint="@color/white"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:clickable="false"
                                        android:longClickable="false"
                                        android:paddingStart="5dp"
                                        android:paddingEnd="5dp"
                                        android:text="@string/show_address_on_map"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:maxLines="2"
                                        android:gravity="center_vertical"
                                        tools:ignore="RtlCompat"

                                        />
                                </LinearLayout>
                            </FrameLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                >
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.2"
                                    >
                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_details"
                                        android:padding="8dp"
                                        android:tint="@color/black"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="13sp"
                                        android:text="@string/order_details"
                                        android:layout_gravity="center_vertical"

                                        />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_order_details"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.8"
                                    android:textColor="@color/gray4"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    android:layout_gravity="center_vertical"
                                    />
                            </LinearLayout>



                        </LinearLayout>
                    </RelativeLayout>
                </ScrollView>
            </LinearLayout>

        </ScrollView>
        <ImageView
            android:id="@+id/image_chat"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_gradient"
            tools:ignore="RtlCompat"
            android:src="@drawable/ic_chat"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            app:layout_anchorGravity="bottom"
            app:layout_anchor="@id/app_bar"
            android:tint="@color/white"
            />

<!--
        <ImageView
            android:id="@+id/image_bill"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_gradient"
            tools:ignore="RtlCompat"
            android:src="@drawable/ic_camera"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            app:layout_anchor="@id/rl"
            app:layout_anchorGravity="bottom"
            android:layout_margin="8dp"
            android:tint="@color/white"
            android:visibility="gone"

            />
-->
        <ImageView
            android:id="@+id/image_call"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/circle_gradient"
            android:padding="10dp"
            android:src="@drawable/ic_call"
            tools:ignore="RtlCompat"
            android:tint="@color/white"
            app:layout_anchor="@id/app_bar"
            app:layout_anchorGravity="bottom|end"
            android:layout_marginEnd="10dp"
            />



    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/fl_update_order_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:clickable="false"
            android:longClickable="false"

            >
            <ImageView
                android:id="@+id/image_arrow2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_left_arrow"
                android:padding="7dp"
                android:clickable="false"
                android:longClickable="false"
                android:tint="@color/white"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_order_next_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:longClickable="false"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:maxLines="2"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat"

                />
        </LinearLayout>

    </FrameLayout>
</RelativeLayout>
